---
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar.astro";
import "@/global.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <meta
      name="description"
      content="Don't Show is a privacy extension that automatically hides sensitive information while screen sharing, streaming, or recording."
    />
    <link rel="canonical" href={Astro.request.url} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Don't Show is a privacy extension that automatically hides sensitive information while screen sharing, streaming, or recording."
    />
  </head>
  <body class="bg-primary font-spline text-white">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<script>
  import { UAParser } from "ua-parser-js";

  const ua = UAParser(navigator.userAgent);

  document.addEventListener("DOMContentLoaded", () => {
    const installButtons: NodeListOf<HTMLAnchorElement> =
      document.querySelectorAll("#install-button");

    if (!installButtons) return;

    installButtons.forEach(installButton => {
      if (ua.browser.name === "Firefox") {
        installButton.href = "https://addons.mozilla.org/firefox/addon/dontshow/";
      }
    });
  });
</script>
