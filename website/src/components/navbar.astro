---
import logo from "../assets/logo.svg";
---

<nav class="container mx-auto flex items-center justify-between p-4">
  <a href="/" class="flex items-center space-x-2 text-2xl font-bold text-white">
    <img src={logo.src} alt="DontShow Logo" class="h-8" />
    <span class="hidden md:block">Don't Show</span>
  </a>
  <div class="flex space-x-4">
    <a
      href=""
      id="download-button"
      class="bg-white text-black px-6 py-2 rounded-full text-lg font-semibold hover:bg-gray-200 transition-colors"
    >
      Download Now
    </a>
  </div>
</nav>
